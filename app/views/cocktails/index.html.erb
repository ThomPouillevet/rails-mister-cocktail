<h1>My list of cocktails</h1>
<% @cocktails.each do |cocktail| %>
  <p><%= cocktail.name %> <%= link_to "Show", cocktail_path(cocktail) %> <%= link_to "(delete)", cocktail_path(cocktail),
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>
<% end %>

<%= link_to "Add a cocktail", new_cocktail_path %>
